{
    "manifest_version": 2,

    "name": "Swap",
    "description": "Replaces images on the site with ones with sizes",
    "version": "0.1",

    "permissions": [],
    "browser_action": {
        "default_icon": {
            "19": "images/inactive19.png",
            "38": "images/inactive38.png"
        },
        "default_title": "Swap Images"
    },
    "background": {
        "scripts": ["toggle.js"]
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["swap.js"],
            "run_at": "document_end"
        }
    ]
}
